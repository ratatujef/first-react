{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "Kameleoon": "readonly",
        "dataLayer": "readonly",
        "tc_vars": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": "off",
        "import/prefer-default-export": "off",
        "padded-blocks": "off",
        "no-trailing-spaces": "off",
        "comma-dangle": "off",
        "max-len": [
            2,
            100,
            {
                "ignoreUrls": true,
                "ignorePattern": "import|export"
            }
        ],
        "object-curly-newline": [
            2,
            {
                "ObjectExpression": {
                    "minProperties": 4,
                    "multiline": true,
                    "consistent": true
                },
                "ObjectPattern": {
                    "minProperties": 4,
                    "multiline": true,
                    "consistent": true
                },
                "ImportDeclaration": {
                    "minProperties": 6,
                    "multiline": true,
                    "consistent": true
                },
                "ExportDeclaration": {
                    "minProperties": 6,
                    "multiline": true,
                    "consistent": true
                }
            }
        ],
        "no-underscore-dangle": "off",
        "consistent-return": "off",
        "no-continue": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "no-new": "off",
        "no-restricted-globals": "off",
        "no-restricted-syntax": "off",
        "no-console": 1,
        "no-var": 1,
        "no-unused-vars": [
            1,
            {
                "ignoreSiblings": true,
                "argsIgnorePattern": "res|next|^err"
            }
        ],
        "prefer-const": [
            2,
            {
                "destructuring": "all"
            }
        ],
        "no-unused-expressions": [
            2,
            {
                "allowShortCircuit": true,
                "allowTaggedTemplates": true,
                "allowTernary": true
            }
        ],
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "no-array-constructor": [2],
        "array-callback-return": [2],
        "eqeqeq": [2],
        "no-mixed-operators": [2],
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "space-before-blocks": [2],
        "keyword-spacing": [2],
        "space-infix-ops": [2],
        "newline-per-chained-call": [2],
        "no-whitespace-before-property": [2],
        "semi": [2],
        "id-length": [
            1,
            {
                "exceptions": ["i", "j", "a", "b"]
            }
        ]
    }
}
